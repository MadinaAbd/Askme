 <%= form_with model: question do |form| %>
<%= form.hidden_field :nickname %>

<p><%= form.label :body, 'Текст вопроса' %></p>
<p><%= form.text_area :body, rows: 5, class: 'form-text-area'%></p>

<% if question.persisted? %>
  <p class="mt"><%= form.label :answer, 'Oтвет' %></p>
  <p><%= form.text_area :answer, rows: 5, class: 'form-text-area'%></p>
<% end %>

<p class="mt"><%= form.submit 'Сохранить', class: 'button button-main' %> или <%= link_to "Назад", :back %></p>
<% end %>
